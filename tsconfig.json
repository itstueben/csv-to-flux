{
  "ts-node": {
    "esm": true
  },
  "compilerOptions": {
    "strict": true,
    "module": "NodeNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"], // which files to compile
  "exclude": ["node_modules"], // which files to skip
}